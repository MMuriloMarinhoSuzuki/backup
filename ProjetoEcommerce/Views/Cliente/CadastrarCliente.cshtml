@model ProjetoEcommerce.Models.Cliente;

<h1>Cadastrar Cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomeCli" class="control-label"></label>
                <input asp-for="NomeCli" class="form-control" />
                <span asp-validation-for="NomeCli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeleCli" class="control-label"></label>
                <input asp-for="TeleCli" class="form-control" />
                <span asp-validation-for="TeleCli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailCli" class="control-label"></label>
                <input asp-for="EmailCli" class="form-control" />
                <span asp-validation-for="EmailCli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>