@model ProjetoEcommerce.Models.Produto;

<h1>Cadastrar Produto</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomeProd" class="control-label"></label>
                <input asp-for="NomeProd" class="form-control" />
                <span asp-validation-for="NomeProd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DescProd" class="control-label"></label>
                <input asp-for="DescProd" class="form-control" />
                <span asp-validation-for="DescProd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantProd" class="control-label"></label>
                <input asp-for="QuantProd" class="form-control" />
                <span asp-validation-for="QuantProd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecoProd" class="control-label"></label>
                <input asp-for="PrecoProd" class="form-control" />
                <span asp-validation-for="PrecoProd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Produtos">Voltar</a>
</div>